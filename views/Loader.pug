#loader(
  x-show='loading'
  x-transition:enter='transition ease-out duration-1000'
  x-transition:enter-start='opacity-0'
  x-transition:enter-end='opacity-100'
  x-transition:leave='transition ease-in duration-1000'
  x-transition:leave-start='opacity-100'
  x-transition:leave-end='opacity-0'
  class='w-screen h-screen fixed top-0 left-0 z-[10000] flex flex-col items-center justify-center bg-h-100/90 dark:bg-h-800/90 backdrop-blur-sm')
  
  .loading-container(class='relative flex flex-col items-center justify-center')
    //- 기존 로딩 애니메이션
    .loading(
      class='rounded-full w-14 h-14 my-14 mx-auto text-base relative border-2 border-solid border-h-500/20 border-l-h-500 dark:border-h-100/20 dark:border-l-h-100 animate-loading'
    )
    //- 로딩 텍스트
    .loading-text(
      class='mt-4 text-h-600 dark:text-h-200 font-medium text-sm'
    ) Loading...

style.
  .loading-text {
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }

  @keyframes pulse {
    0%, 100% {
      opacity: 0.5;
    }
    50% {
      opacity: 1;
    }
  }

  .animate-loading {
    animation: loading 1s linear infinite;
  }

  @keyframes loading {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

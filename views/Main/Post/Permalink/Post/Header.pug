header#header(class='flex justify-center items-center border-b border-b-solid border-b-h-300 dark:border-b-h-600')
  #{`s_${type}_rep_thumbnail`}
    .img(class='absolute right-0 top-0 w-full before:content-[""] before:absolute before:right-0 before:top-0 before:w-full before:bg-h-900/20 before:z-10')
      img.thumb(
        src=`[##_${type}_rep_thumbnail_url_##]`
        alt=''
        class='absolute right-0 top-0 w-full h-full z-0 object-cover')
  .info(class='flex flex-col items-center gap-y-1 mx-4 relative z-20 lg:mx-0')
    h1.tit(class='text-center font-bold text-2xl lg:text-3xl') #{`[##_${type}_rep_title_##]`}
    .desc(class='flex gap-x-1 text-sm')
      time.date #{`[##_${type}_rep_date_##]`}
      span.delimiter ·
      unless hasCategory
        case type
          when 'notice'
            a.category(class='/notice') 공지사항
      else
        a.category(href='[##_article_rep_category_link_##]') [##_article_rep_category_##]
      if hasCategory
        include Header/Admin

style(once='header-simple')
  :postcss
    [data-mode=simple] {
      #header {
        @apply h-64 before:h-64;

        .img {
          @apply hidden;
        }

        .info {
          @apply text-h-200 dark:text-h-200;
        }
      }
    }

style(once='header-thumbnail')
  :postcss
    [data-mode=thumbnail] {
      #header {
        @apply relative h-64 before:h-64;

        .img {
          @apply h-64 before:h-64;
        }

        .info {
          @apply text-h-200;
        }
      }
    }

style(once='header-screen')
  :postcss
    [data-mode=screen] {
      #header {
        @apply fixed top-0 right-0 w-c h-screen before:h-screen;

        .img {
          @apply h-screen before:h-screen;
        }

        .info {
          @apply text-h-200;
        }
      }
    }

s_list
  #list(
    x-data='{ listStyle: "[##_list_style_##]" }'
    x-init='$store.header.title = "[##_list_conform_##]"'
    :data-list-style='listStyle')
    s_list_rep
      +index('list_rep')
    s_list_empty
      include List/Empty

style
  :postcss
    #tt-body-index,
    #tt-body-category,
    #tt-body-tag,
    #tt-body-search {
      #global-header ~ .post,
      [data-list-style=empty],
      [data-list-style=gallery],
      [data-list-style=list],
      [data-list-style=grid],
      [data-list-style=zigzag] {
        @apply w-full px-4 lg:px-0 lg:mx-auto lg:w-idx;
      }

      [data-list-style=slider] {
        @apply w-full h-screen;
      }

      [data-list-style=grid],
      [data-list-style=gallery] {
        @apply grid grid-cols-2 sm:grid-cols-3 md:grid-cols-2 lg:grid-cols-3;
      }

      [data-list-style=grid] {
        @apply gap-4 lg:gap-8;
      }

      [data-list-style=gallery] {
        @apply gap-2;
      }

      [data-list-style=list],
      [data-list-style=zigzag] {
        @apply flex flex-col gap-y-6 sm:gap-y-0;
      }
    }

style
  :postcss
    #tt-body-index,
    #tt-body-category,
    #tt-body-tag,
    #tt-body-search {
      [data-list-style=slider] {
        /* https://swiperjs.com/demos#navigation */
        .swiper-button-next,
        .swiper-button-prev {
          --swiper-navigation-size: 2rem;
          --swiper-navigation-color: rgba(255, 255, 255, .6);
          @apply max-lg:hidden;

          &::before,
          &::after {
            @apply text-sm font-bold;
          }
        }
      }
    }

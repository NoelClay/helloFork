s_list
  #list
    +header('[##_list_conform_##]')
    .posts(
      data-mode='[##_list_style_##]'
      x-ref='list')
      s_list_rep
        +index('list_rep')
      s_list_empty
        +empty()

style
  :postcss
    [data-mode=gallery],
    [data-mode=list],
    [data-mode=grid],
    [data-mode=zigzag] {
      @apply w-full px-4 lg:px-0 lg:mx-auto lg:w-idx;
    }

style
  :postcss
    [data-mode=list] {
      @apply flex flex-col gap-y-6 sm:gap-y-0;
    }

style
  :postcss
    [data-mode=grid] {
      @apply grid grid-cols-2 sm:grid-cols-3 md:grid-cols-2 lg:grid-cols-3;
      @apply gap-4 lg:gap-8;
    }

style
  :postcss
    [data-mode=zigzag] {
      @apply flex flex-col gap-y-6 sm:gap-y-0;
    }

style
  :postcss
    [data-mode=slider] {
      @apply w-full h-screen;
    }

style
  :postcss
    [data-mode=gallery] {
      @apply grid gap-2 grid-cols-2 sm:grid-cols-3 md:grid-cols-2 lg:grid-cols-3;
    }

#bottom(
  x-data='bottom'
  class='flex justify-end px-4 w-full box-border fixed text-sm z-30 bottom-3 xl:bottom-4 <s_if_var_sidebar>xl:w-c</s_if_var_sidebar>')
  .wrap(class='flex gap-x-3')
    button.theme.btn(@click='toggle')
      span.txt(class='text-hidden') 테마
      i.ico(class='fa-solid fa-moon text-base')
    a.top.btn(href='#hELLO')
      span.txt(class='text-hidden') 상단으로
      i.ico(class='fa-solid fa-chevron-up text-base')
    button.shortcut.btn(@click='showShortcut')
      span.txt(class='text-hidden') 단축키
      i.ico(class='fa-regular fa-keyboard text-base')

script.
  document.addEventListener('alpine:init', () => Alpine.data('bottom', () => ({
    /**
     * Toggle Theme
     */
    toggle () {
      darkMode.toggle()

      this.$data.dark = ! this.$data.dark
    },

    /**
     * Display shortcut layer
     */
    showShortcut () {
      this.$shortcutLayer.style.display = 'block'
    },

    /**
     * Get shortcutLayer
     *
     * @return {HTMLElement}
     */
    get $shortcutLayer () {
      return document.getElementById('shortcutLayer')
    }
  })))

style
  :postcss
    #bottom {
      .btn {
        @apply flex justify-center items-center w-10 h-10 outline-0 rounded-full bg-h-200 text-h-500;
        @apply dark:bg-h-700 dark:text-h-200 dark:hover:bg-h-600;
        @apply hover:bg-h-300;
      }
    }
